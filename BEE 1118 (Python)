media = 0
while True:
  while True:
    x = float(input())
    if x >= 0 and x <= 10:
      media += x
      break
    print('nota invalida')
  while True:
    y = float(input())
    if y >= 0 and y <= 10:
      media += y
      break
    print('nota invalida')
  media = media / 2
  print(f'media = {media:.2f}')
  media = 0
  while True:
    print('novo calculo (1-sim 2-nao)')
    a = int(input())
    if a == 1:
      break
    if a == 2:
      break
  if a == 2:
    break
